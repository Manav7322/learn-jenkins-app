pipeline {
    agent any

    environment {
        CI = 'true'
        PATH = "${env.PATH}:${env.WORKSPACE}/node_modules/.bin"
    }

    stages {
        stage('build') {
            agent {
                docker {
                    image 'node:18'
                    reuseNode true
                }
            }

            steps {
                sh '''
                    set -e

                    echo "Workspace: $WORKSPACE"
                    echo "PATH: $PATH"

                    ls -la
                    node --version
                    npm --version

                    rm -rf node_modules
                    npm ci
                    npm run build
                '''
            }
        }
    }
}
