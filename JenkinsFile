pipeline {
    agent any
    stages {
        stage('build') {
            agent {
                docker {
                    image 'node:18-alpine'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    # Check versions
                    node --version
                    npm --version

                    # Downgrade npm to v9 to avoid the exit handler bug
                    npm install -g npm@9

                    # Install dependencies
                    npm ci

                    # Run your build
                    npm run build
                '''
            }
        }
    }
}
