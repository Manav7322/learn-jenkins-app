pipeline {
    agent any
    stages {
        stage('build') {
            agent {
                docker {
                    image 'node:18.17.1-bullseye-slim'
                    reuseNode true
                }
            }
            steps {
                sh '''
                    ls -la
                    # Check versions
                    node --version
                    npm --version
                    npm ci
                    # Run your build
                    npm run build
                    ls -la
                '''
            }
        }
    }
}
