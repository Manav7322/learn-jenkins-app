pipeline {
    agent any

    stages {
        stage('build') {
            agent {
                docker {
                    image 'node:18'
                    reuseNode true
                }
            }

            steps {
                sh '''
                    set -e

                    ls -la
                    node --version
                    npm --version

                    rm -rf node_modules
                    npm ci
                    npm run build
                '''
            }
        }
    }
}
